<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('components/header') %>
</head>

  <body>
        <% row.forEach((offer) => { %>

    <header>
      <h4>Manage Account</h4>
      </p>
      <p><a href='/home'>Home</a> | <a href='/logout'>Logout</a> </p>


    </header>
    <main class="container">
        <div>

        <form action="/editOfferName" method="POST">
        <input type="hidden" name="id_field" value="<%= offer.offer_id %>">
          <div class="input-group mb-3">
            <input type="text" name="offer_name_field" class="form-control" placeholder="Edit Offer Name"
              aria-label="Offer Name" aria-describedby="button-addon2"
              value="<%= offer.offer_name %>">
            <button type="submit">Update</button>
          </div>


      </form>



      <form action="/editOfferDesc" method="POST">
        <input type="hidden" name="id_field" value="<%= offer.offer_id %>">
          <div class="input-group mb-3">
            <input type="text" name="offer_desc_field" class="form-control" placeholder="Edit Offer Description"
              aria-label="Offer Description" aria-describedby="button-addon2"
              value="<%= offer.offer_desc %>">
            <button type="submit">Update</button>
          </div>


      </form>

      <form action="/editOfferImage" method="POST">
        <input type="hidden" name="id_field" value="<%= offer.offer_id %>">
          <div class="input-group mb-3">
            <input type="text" name="offer_image_field" class="form-control" placeholder="Offer Image"
              aria-label="Offer Image" aria-describedby="button-addon2"
              value="<%= offer.offer_code_field%>">
            <button type="submit">Update</button>
          </div>
      </form>


      <form action="/editOfferURL" method="POST">
        <input type="hidden" name="id_field" value="<%= offer.offer_id %>">
          <div class="input-group mb-3">
            <input type="text" name="offer_URL_field" class="form-control" placeholder="Offer URL"
              aria-label="Offer URL" aria-describedby="button-addon2"
              value="<%= offer.offer_url %>">
            <button type="submit">Update</button>
          </div>
      </form>


      <form action="/editOfferCode" method="POST">
        <input type="hidden" name="id_field" value="<%= offer.offer_id %>">
          <div class="input-group mb-3">
            <input type="text" name="offer_code_field" class="form-control" placeholder="Offer Code"
              aria-label="Offer Image" aria-describedby="button-addon2"
              value="<%= offer.offer_code_field%>">
            <button type="submit">Update</button>
          </div>
      </form>



    </div>
    </main>
    <% }); %>

  </body>

  
<footer>
  <%- include('components/footer') %>
</footer>

</body>
</html>