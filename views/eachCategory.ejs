<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('components/header') %>
</head>

<body>

    <div class="row row-cols-1 row-cols-md-2 g-4">

        <% categoryRow.forEach( (eachCategory)=> {

            const options = {
            weekday: 'long',
            month: 'long',
            day: '2-digit'
            }
            let datesub = eachCategory.date_submitted.toLocaleString('en-GB', options); %>


            <div class="col">

                <div class="card">


                    <img src="<%= eachCategory.offer_image %> " class="card-img-top" alt="...">



                    <div class="card-body">
                        <h5 class="card-title">
                            <%= eachCategory.offer_name %>
                        </h5>
                        <p class="card-text">
                            <%= eachCategory.offer_desc %>
                        </p>
                        <p class="card-text">
                            Deal Starts : <%= eachCategory.start_date %>
                                Deal Expires : <%= eachCategory.expiry_date %>

                        </p>
                        <p class="card-text">
                            Submitted by : <%= eachCategory.username%> on <%= datesub %>
                        </p>
                    </div>

                    <div>
                        <% if (member && member.length> 0 ) { %>

                            <form action="/savedOffer" method="POST">
                                <input type="hidden" name="offer_id" value="<%= eachCategory.offer_id %>">
                                <input type="hidden" name="member_id" value="<%= eachCategory.member_id %>">
                                <button type="submit" values="submit" class="btn btn-primary">
                                    Add to Saved
                                </button>
                            </form>

                           

                            <% }; %>
                    </div>


                </div>
            </div>
            <% }); %>

    </div>
    <a href='category' class="btn btn-primary"> BACK </a>




    <footer>
    <%- include('components/footer') %>
</footer>

</body>
</html>