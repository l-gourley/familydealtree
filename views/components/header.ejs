            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#submitOfferModal">
                Submit a Deal!
            </button>


            <!-- Modal -->
            <div class="modal fade" id="submitOfferModal" data-bs-backdrop="static" data-bs-keyboard="false"
                tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="staticBackdropLabel">What do you want to post?
                            </h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="card">
                                <h5 class="card-header">Deal</h5>

                                <div class="card-body">
                                    <p class="card-text">Post specific products on sale, like a TV or pair
                                        of trainers,
                                        with or without a coupon</p>
                                    <a href="/submitDeal" class="btn btn-primary">Post a Deal</a>
                                </div>
                            </div>
                            <div class="card">
                                <h5 class="card-header">Voucher</h5>

                                <div class="card-body">

                                    <p class="card-text">Post coupons and vouchers that give discounts on
                                        product lines,
                                        stores or events</p>
                                    <a href="/submitVoucher" class="btn btn-primary">Post a Voucher</a>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
